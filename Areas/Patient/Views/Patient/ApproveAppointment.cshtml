@model IEnumerable<Hospital_Management.Areas.Patient.Models.AppoinmnetModel>
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit AppoinmnetList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Appointment</h2>

@foreach (var appointment in Model)
{
    <form asp-action="ApproveAppointment" method="post">
        <div class="form-group">
            <label for="Appoinment_Id">Appoinment_Id:</label>
            <input type="text" id="Appoinment_Id" class="form-control" value="@appointment.Appoinment_Id" />
            <input type="hidden" name="id" value="@appointment.Appoinment_Id" />
        </div>
        <div class="form-group">
            <label for="patientName">Patient Name:</label>
            <input type="text" id="patientName" class="form-control"  value="@appointment.Patient_Name" readonly />
        </div>
        <div class="form-group">
            <label for="doctorName">Doctor Name:</label>
            <input type="text" id="doctorName" class="form-control" value="@appointment.Doctor_Name" readonly />
        </div>
        <div class="form-group">
            <label for="date">Date:</label>
            <input type="text" id="date" class="form-control" value="@appointment.Date" readonly />
        </div>
        <div class="form-group">
            <label for="timeperiod">Time:</label>
            <input type="text" id="timeperiod" class="form-control" value="@appointment.TimeDuration" readonly />
        </div>
        <div class="form-group">
            <label for="stime">Start Time:</label>
            <input type="text" id="stime" class="form-control" value="@appointment.Time" readonly />
        </div>
        <div class="form-group">
            <label for="etime">End Time:</label>
            <input type="text" id="etime" class="form-control" value="@appointment.etime" readonly />
        </div>
        <div class="form-group">
            <label for="isSelect">Is Done:</label>
            <select id="isSelect" class="form-control" name="isSelect">
                @{
                    string yesSelected = appointment.isSelect ? "selected" : "";
                    string noSelected = !appointment.isSelect ? "selected" : "";
                }
                <option value="true" selected="@yesSelected">Yes</option>
                <option value="false" selected="@noSelected">No</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
}